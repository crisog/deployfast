---
import FrameworkCard from './FrameworkCard.jsx';
---

<div class="min-h-screen bg-background">
  <nav class="border-b border-border">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center">
          <div class="text-xl font-bold text-foreground">
            DeployFast
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <a href="#" class="text-muted-foreground hover:text-foreground transition-colors">
            GitHub
          </a>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-16">
    <div class="text-center space-y-8">
      <h1 class="text-5xl sm:text-6xl font-bold text-foreground">
        Deploy modern web apps, fast.
      </h1>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Select your framework. We'll guide your deployment.
      </p>
    </div>

    <div class="mt-16 grid gap-6 md:grid-cols-2 max-w-4xl mx-auto">
      <FrameworkCard
        client:load
        framework="nextjs"
        title="Next.js"
        logoSrc="/nextjs/icon/light-background/nextjs-icon-light-background.svg"
        logoAlt="Next.js logo"
        description="Ready to deploy your Next.js app."
        buttonText="Choose Next.js →"
      />

      <FrameworkCard
        client:load
        framework="tanstack-start"
        title="TanStack Start"
        logoSrc="/tanstack/logo-color-600.png"
        logoAlt="TanStack logo"
        description="Ready to deploy your TanStack Start app."
        buttonText="Choose TanStack Start →"
      />
    </div>
  </div>
</div>